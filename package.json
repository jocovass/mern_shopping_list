{
  "name": "mern_shopping_list",
  "version": "1.0.0",
  "description": "Sopping list built with the MERN stack.",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jocovass/mern_shopping_list.git"
  },
  "author": "Jozsef Vass",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jocovass/mern_shopping_list/issues"
  },
  "homepage": "https://github.com/jocovass/mern_shopping_list#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.2.0",
    "config": "^3.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.17"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
  }
}
